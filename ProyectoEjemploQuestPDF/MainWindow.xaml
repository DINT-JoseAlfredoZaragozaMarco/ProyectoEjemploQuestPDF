<Window x:Class="ProyectoEjemploQuestPDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoEjemploQuestPDF"
        mc:Ignorable="d"
        Title="QuestPDF" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" FontSize="40" Foreground="Red" FontWeight="Bold">Quest PDF</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock FontSize="25" Margin="10">Título del PDF</TextBlock>
            <TextBox Width="300" Height="30" FontSize="20" Name="Titulo"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="100" Height="30" Background="#FFDA2D2D" Foreground="White" FontWeight="Bold" Click="GenerarPDF" Margin="5">Generar PDF</Button>
        </StackPanel>
    </StackPanel>
</Window>
